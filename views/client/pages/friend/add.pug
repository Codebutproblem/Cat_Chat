extends ../../layouts/default.pug
include ../../mixins/box-info-user.pug
include ../../mixins/pagination.pug
block style 
    link(rel="stylesheet", href="/client/css/friend.css")
block main
    .main 
        div(user-id=user.id)
        h1 Search Friend
        .friend 
            .inner-search
                form(action="" class="form-search")
                    input(type="text" name="keyword" class="input-search-user" id="input-search-user" placeholder="Tìm kiếm...")
                    button(type="submit") 
                        i(class="fa-solid fa-magnifying-glass") 

            .inner-users
                .add-friend-box.row.align-items-stretch
                    each user in users
                        .col-md-4.col-sm-6
                            .box-user(user-id=user.id)
                                .inner-avatar 
                                    img(src=user.avatar)
                                .inner-info 
                                    div(class="inner-name") #{user.fullName}
                                    - const classButton = "inner-button " + user.classBtn
                                    div(class=classButton data-user-id=user.id) 
                                        button(class="add-btn btn btn-sm btn-primary") Add
                                        button(class="accept-btn btn btn-sm btn-success") Accept
                                        button(class="refuse-btn btn btn-sm btn-danger ms-2") Refuse
                                        button(class="cancel-btn btn btn-sm btn-secondary") Cancel
                                        button(class="unfriend-btn btn btn-sm btn-danger") Unfriend
                if (pagination.totalPage > 1)
                    +pagination(pagination)
    each user in users
        +box-info-user(user)                                  
block script     
    script(src="/client/js/friend.js")
    script(src="/client/js/pagination.js")
            