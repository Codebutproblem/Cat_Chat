doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Admin Login
    // font-awesome
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css', integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==', crossorigin='anonymous', referrerpolicy='no-referrer')
    // link css
    link(rel='stylesheet', href='/admin/css/login.css')
  body
    main.login
      .login--content
        img.login--img(src='/admin/images/bg-login.png', alt='background image')
        form.login--form(action='/admin/auth/login', method='POST')
          div
            h1.login--title
              span Welcome
              |  Back
            p.login--description Welcome! Please login to continue
          div
            .login--inputs
              .form--div
                input#input-email.login--input(type='email', placeholder='', required name='email' value='leminhvu0201@gmail.com')
                label.login--label(for='input-email') Enter your email address
              .form--div
                input#input-password.login--input(type='password', placeholder='', required name='password' value='123')
                label.login--label(for='input-password') Enter your password
          div
            .login--button
              button.login--btn Login