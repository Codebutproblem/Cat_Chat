extend ../../layouts/default.pug
block styles
    link(rel="stylesheet", href="/admin/css/create-post.css")
block main
    .main
        .container
            .card-header
                h3(class="card-title") Chỉnh sửa thông báo
            .card-body
                form(action=`/admin/posts/edit/${post.id}?_method=PATCH`, method="post")
                    div(class="mb-3")
                        label(for="", class="form-label") Tiêu đề
                        input(type="text" name="title" id="title" class="form-control" value=post.title)
                    div(class="mb-3")
                        label(for="content", class="form-label") Nội dung
                        textarea(class="form-control tinymce-textarea" name="content" id="content") !{post.content}
                    div(class="mb-3") 
                        button(class="btn btn-primary") Sửa bài
block scripts
    script(src="/tinymce/tinymce.min.js")
    script(src="/admin/js/tinymce-config.js") 
    script.
        const hamBurger = document.querySelector(".toggle-btn");
        hamBurger.addEventListener("click", function () {
            document.querySelector("#sidebar").classList.toggle("expand");
        });    
             
            