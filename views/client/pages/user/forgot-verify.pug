extends ../../layouts/default.pug

block style 
    link(rel="stylesheet", href="/client/css/user.css")

block main
    .container
        .row.justify-content-center
            .col-xl-6
                div(class="user-box login-box mt-5")
                    h1(class="text-center") Forgot Password
                    form(
                        action="/user/password/forgot-verify"
                        method="POST"
                    )
                        div(class="form-box")
                            input(
                                class="form-input"
                                type="text"
                                name="email"
                                id="email-forgot"
                                required
                                value=email
                                readonly 
                            )
                            div(class="label mb-4")
                        div(class="form-box")
                            input(
                                class="form-input"
                                type="text"
                                name="otp"
                                id="otp-forgot-verify"
                                required
                            )
                            div(class="label") OTP
                        div(class="mb-3 form-box d-flex justify-content-between")
                            button(class="btn btn-warning w-48" send-again-btn) Send again
                            button(type="submit" class="btn btn-primary w-48") Next step
    form(action=`/user/password/forgot-verify/send-again/${email}`, method="get" form-send-again)
    
block script 
    script(src="/client/js/user.js")  
                          
