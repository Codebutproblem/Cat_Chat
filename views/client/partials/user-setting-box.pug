.box-user-setting.hidden
    .main-box(class="text-white") 
        form(action="/user/update-info?_method=PATCH" method="POST" enctype="multipart/form-data") 
            .box-head
                label(class="inner-img")
                    .box-select <i class="fa-regular fa-image"></i>
                    img(src=user.avatar)
                    input(type="file" accept="image/*" name="avatar" class="form-control d-none")
                input(
                    type="text"
                    class="inner-name"
                    value= user.fullName
                    name="fullName"
                )
                span(close-button) <i class="fa-regular fa-circle-xmark"></i>
            .box-body
                div(class="mb-3") Email: 
                    span(class="ms-2") <b>#{user.email}</b>
                div(class="mb-3") Number of friends: 
                    span(class="ms-2") <b>#{user.friendList.length}</b>
                div(class="my-3 gender-form d-flex")
                    div Gender: 
                    div(class="inner-gender-box ms-3")
                        input(
                            class="radio-input"
                            type="radio"
                            name="gender"
                            id="male-gender"
                            value="male"
                            checked = (user.gender=="male"? true: false)
                            required
                        )
                        label(for="male-gender" class="ms-1") Male
                    div(class="inner-gender-box ms-3")
                        input(
                            class="radio-input"
                            type="radio"
                            name="gender"
                            id="female-gender"
                            value="female"
                            checked = (user.gender=="female"? true: false)
                            required
                        )
                        label(for="female-gender" class="ms-1") Female
                div(class="mb-3")
                    label(for="phone" class="form-label") Phone number:
                    input(type="text" class="form-control" id="phone" name="phone" placeholder="09xxxxxx..." value=(user.phone ? user.phone: ""))
                div(class="mb-3")
                    label(for="description" class="form-label") Introduce yourself:
                    textarea(name="description", cols="30", rows="4" class="form-control") #{user.description ? user.description : "" }
                div(class="mb-3")
                    button(type="submit" class="btn btn-primary") Update
                    a(href="/user/password/change" class="change-password btn btn-warning ms-2") Change password
